<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_account_layout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/activity_account_return_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/transparent_black_ten_percent"
        android:textSize="27dp"
        android:text="Thông tin tài khoản"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_account_layout_avatar"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_layout"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/activity_account_avatar"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_avatar" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="Họ tên khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_account_name"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_layout_avatar"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_account_phone"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_layout_avatar"
        android:layout_marginTop="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_name"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/activity_account_change_information"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Chỉnh sửa thông tin tài khoản"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_name"
        android:layout_marginTop="50dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_change_information"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/activity_account_change_password"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Đổi mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_change_information"
        android:layout_marginTop="0dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_change_password"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/activity_account_rule"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Điều khoản và quy định"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_change_password"
        android:layout_marginTop="0dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_rule"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/activity_account_guide"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Hướng dẫn về quy trình đặt lịch"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_rule"
        android:layout_marginTop="0dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_guide"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/activity_account_for_application"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Về ứng dụng này"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_guide"
        android:layout_marginTop="0dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_for_application"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/activity_account_logout"
        android:textColor="#E10D0D"
        android:textSize="15dp"
        android:text="Đăng xuất"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_for_application"
        android:layout_marginTop="0dp"
        android:background="@drawable/transparent_black_ten_percent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_logout"
        android:layout_marginTop="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>