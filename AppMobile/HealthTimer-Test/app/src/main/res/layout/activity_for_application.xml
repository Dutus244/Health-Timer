<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_account_layout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/activity_account_return_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/transparent_black_ten_percent"
        android:textSize="27dp"
        android:text="Thông tin về ứng dụng"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_for_application_layout_avatar"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="100dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_account_layout"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/activity_account_avatar"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/team_icon" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="Kỳ lân bảy màu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_for_application_1"
        android:textColor="@color/black"
        android:textSize="@dimen/dp30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_for_application_layout_avatar"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:text="Đồ án Nhập môn Công nghệ phần mềm"
