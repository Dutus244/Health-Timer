<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/main_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cảm ơn"
            android:textColor="@color/white"
            android:textSize="@dimen/dp30"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã đặt lịch thành công"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã xác nhận của bạn là "
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:layout_width="300sp"
            android:layout_height="300dp"
            android:src="@drawable/confirm_book_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000sp"
        android:layout_marginTop="300dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/activity_booking_confirm_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin khách hàng"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test2"
            android:layout_below="@+id/activity_booking_confirm_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_name"
            android:layout_below="@+id/activity_booking_confirm_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nguyễn Duy "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test3"
            android:layout_below="@+id/activity_booking_confirm_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_phone"
            android:layout_below="@+id/activity_booking_confirm_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0868657342"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:id="@+id/activity_booking_confirm_test4"
            android:layout_below="@+id/activity_booking_confirm_test3"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/white"
            android:layout_marginTop="10sp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/activity_booking_confirm_test5"
            android:layout_below="@+id/activity_booking_confirm_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đặt lịch"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test6"
            android:layout_below="@+id/activity_booking_confirm_test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bệnh viện: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_hospital_name"
            android:layout_below="@+id/activity_booking_confirm_test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bệnh viện Nhi đồng 2"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test7"
            android:layout_below="@+id/activity_booking_confirm_test6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_service"
            android:layout_below="@+id/activity_booking_confirm_test6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoa ngoại"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test8"
            android:layout_below="@+id/activity_booking_confirm_test7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày khám: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_date"
            android:layout_below="@+id/activity_booking_confirm_test7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/07/2022"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_test9"
            android:layout_below="@+id/activity_booking_confirm_test8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ khám: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/activity_booking_confirm_time"
            android:layout_below="@+id/activity_booking_confirm_test8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30-8:00"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/activity_booking_cofirm_see_schedule"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Xem lịch đặt khám"
            android:textColor="@color/main_color"
            android:background="@drawable/booking_confirm_btn"/>

        <Button
            android:id="@+id/activity_booking_confirm_return_homepage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Trở về trang chủ"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_color"
            android:background="@drawable/booking_confirm_btn"/>
    </LinearLayout>


</RelativeLayout>